<!DOCTYPE html>
<html lang="en" ng-app="ohe">
  <head>
    <meta charset="utf-8">

    <title>&Omega;</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrftoken" id="csrftoken" data-token="<%= _csrf %>">
    <% if (is_authenticated) { %>
      <meta name="user" id="user" data-id="<%= user.id %>">
    <% } %>
    <link href="/static/bootstrap/css/bootstrap.cerulean.css" rel="stylesheet">
    <link href="/static/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="/static/angular-ui/angular-ui.css" rel="stylesheet">
    <link href="/static/select2/select2.css" rel="stylesheet">
    <link href="/static/css/ohe.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.js"></script>
    <script src="/static/underscore/underscore.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.js"></script>
    <script src="/static/angular-ui/angular-ui.js"></script>
    <script src="/static/bootstrap/js/bootstrap.js"></script>
    <script src="/static/select2/select2.js"></script>
    <script src="/static/js/utils.js"></script>
    <script src="/static/js/socket.js"></script>
    <script src="/static/js/messages.js"></script>
    <script src="/static/js/users.js"></script>
    <script src="/static/js/channel-state.js"></script>
    <script src="/static/js/channels.js"></script>
    <script src="/static/js/ohe.js"></script>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">&Omega;&nbsp;&nbsp;&nbsp;App.net</a>
          <div class="nav-collapse collapse">
            <% if (is_authenticated) { %>
              <ul class="nav">
                <li ng-class="{active:selectedNav == 'inbox'}"><a href="/">Inbox</a></li>
              </ul>
              <ul class="nav pull-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @<%= user.username %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/logout" target="_self">Logout</a></li>
                    <li ng-show="window.webkitNotifications"><a href='#' onclick="window.webkitNotifications && window.webkitNotifications.requestPermission()">Enable Notifications</a></li>
                  </ul>
                </li>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <% if (!is_authenticated) { %>
      <div class="container">
        <h1>Welcome to &Omega;</h1>
        <a href="<%= auth_url %>" target="_self">Please log in with App.net &rarr;</a></p>
      </div>
    <% } else { %>
      <div class="container" ng-view></div>
    <% } %>
  </body>
</html>
